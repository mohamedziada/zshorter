    <h1>Link</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ link.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ link.code }}</td>
            </tr>
            <tr>
                <th>Url</th>

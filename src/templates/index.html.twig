{% extends 'base.html.twig' %}

{% block title %}Link index{% endblock %}

{% block body %}

    <!-- Masthead -->
    <header class="masthead text-white text-center">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <h1 class="mb-5">Take your links to a new level!</h1>
                </div>
                <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                    <form>
                        <div class="form-row">
                            <div class="col-12 col-md-9 mb-2 mb-md-0">
                                 <input id="shorten_url" class="shorten-input form-control form-control-lg" autocomplete="off" name="url" type="url" value="" placeholder="Shorten your link">
                            </div>

                            <div class="col-12 col-md-3">
                                <button type="submit" class="btn btn-block btn-lg btn-primary">Shorten</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </header>


{% endblock %}